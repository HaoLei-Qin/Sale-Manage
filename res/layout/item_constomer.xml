<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="62dp"
        android:layout_toRightOf="@+id/txt_name"
        android:gravity="center"
        android:text=" Name:"
        android:textColor="#666666"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView1"
        android:drawableLeft="@drawable/person"
        android:gravity="center"
        android:text="1sadfsdaf"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_name"
        android:layout_alignBottom="@+id/txt_name"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/txt_name"
        android:gravity="center"
        android:text="2"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="33dp"
        android:drawableLeft="@drawable/phone"
        android:gravity="center"
        android:text="1sadfsdaf"
        android:textColor="#666666"
        android:textSize="16sp"
      />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_mobile"
        android:background="#666666" />

    <TextView
        android:id="@+id/txt_mobile2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/txt_mobile"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:gravity="center"
        android:text="3"   android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16sp" />

</RelativeLayout>